<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body>
    <%- include('./partials/header') %>
    <section class="h-100 gradient-custom">
      <div class="container py-5">
        <div class="row d-flex justify-content-center my-4">
          <div class="col-md-8">
            <div class="card mb-4">
              <div class="card-header py-3">
                <h5 class="mb-0">Cart - <%- basketData.length %> items</h5>
              </div>
              <div class="card-body">
                <% if(basketData.length !== 0) { %> <%
                basketData.forEach(function(item, index) { %>
                <!-- Single item -->
                <div class="row">
                  <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                    <!-- Image -->
                    <div
                      class="bg-image hover-overlay hover-zoom ripple rounded"
                      data-mdb-ripple-color="light"
                    >
                      <img
                        src="<%- item.imageurl %>"
                        class="w-100"
                        
                      />
                    </div>
                    <!-- Image -->
                  </div>

                  <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                    <form action="/basket/removeFromBasket">
                    <!-- Data -->
                    <p><strong><%- item.name %></strong></p>
                    <p>Category: <%- item.category %></p>
                    <p>Type: <%- item.typeofpokemon %></p>
                    <button
                      class="btn btn-sm btn-secondary"
                      style="width: 50%; margin-left: 10px"
                      name="<%- item.name %>"
                      type="Submit"
                    >
                      <i class="mdi mdi-delete" aria-hidden="true"></i>
                      Remove
                    </button>
                  </form>
                  </div>

                  <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <p class="text-start text-md-center">
                      <strong><%- item.price %></strong>
                    </p>
                  </div>
                </div>
                <% }) %> <% } else { %> No items found. <% } %>
                <hr class="my-4" />
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card mb-4">
              <div class="card-header py-3">
                <h5 class="mb-0">Summary</h5>
              </div>
              <div class="card-body">
                <ul class="list-group list-group-flush">
                  <li
                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0"
                  >
                    Products
                    <span
                    ><strong>
                      $<%- 
                      basketData.map(c =>
                      Math.round(c.price.replace(/\D/g,''))).reduce((a,
                      b) => a + b, 0) %></strong
                    ></span>
                  </li>
                  <li
                    class="list-group-item d-flex justify-content-between align-items-center px-0"
                  >
                    Shipping
                    <span>Free</span>
                  </li>
                  <li
                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3"
                  >
                    <div>
                      <strong>Total amount</strong>
                    </div>
                    <span
                      ><strong>
                        $<%- 
                        basketData.map(c =>
                        Math.round(c.price.replace(/\D/g,''))).reduce((a,
                        b) => a + b, 0) %></strong
                      ></span
                    >
                  </li>
                </ul>

                <!-- <button type="button" class="btn btn-warning btn-lg btn-block">
                  Go to checkout
                </button> -->
                <a
                  href="/basket/remove"
                  class="btn btn-warning btn-lg btn-bloc"
                  role="button"
                  >Checkout</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>

<script>
</script>
